{
    "name": "openscholar/openscholar",
    "description": "OpenScholar installation profile",
    "type": "drupal-profile",
    "license": "proprietary",
    "authors": [
        {
            "name": "",
            "role": ""
        }
    ],
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "drupal/purl",
                "version": "master",
                "type": "drupal-module",
                "dist": {
                    "url": "https://github.com/openscholar/purl-d8/archive/master.zip",
                    "type": "zip"
                },
                "source": {
                    "url": "https://github.com/openscholar/purl-d8.git",
                    "type": "git",
                    "reference": "master"
                }
            }
        },
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "composer/installers": "^1.2",
        "cweagans/composer-patches": "^1.6",
        "drupal-composer/drupal-scaffold": "^2.5",
        "drupal/console": "^1.0.2",
        "drupal/core": "^8.6.1",
        "drupal/purl": "master@dev",
        "drupal/group_purl": "1.x-dev",
        "drupal/search_api": "^1.9",
        "drush/drush": "^9.0.0",
        "vlucas/phpdotenv": "^2.4",
        "webflo/drupal-finder": "^1.0.0",
        "webmozart/path-util": "^2.3",
        "drupal/pathauto": "^1.2",
        "drupal/config_sync": "^2.0@alpha",
        "drupal/entity_reference_revisions": "^1.6",
        "drupal/paragraphs": "^1.3",
        "drupal/video_embed_field": "^2.0",
        "drupal/context": "^4.0@beta",
        "drupal/redirect": "^1.3",
        "drupal/toolbar_menu": "^2.1",
        "drupal/block_visibility_groups": "^1.3",
        "weitzman/drupal-test-traits": "^1.0@beta"
    },
    "require-dev": {
        "drupal/features": "^3.7",
        "webflo/drupal-core-require-dev": "^8.6",
        "drupal/devel": "^1.2",
        "behat/mink-extension": "^2.3",
        "behat/mink-selenium2-driver": "^1.3",
        "bex/behat-screenshot": "^1.2",
        "php-coveralls/php-coveralls": "^2.1",
        "drupal/group": "dev-1.x"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
      "preferred-install": {
        "drupal/core": "dist"
      }
    },
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ],
        "files": ["load.environment.php"]
    },
    "scripts": {
        "pre-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "pre-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-install-cmd": [
            "@composer drupal:scaffold",
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles",
            "DrupalProject\\composer\\ScriptHandler::placeProfile"
        ],
        "post-update-cmd": [
            "@composer drupal:scaffold",
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles",
            "DrupalProject\\composer\\ScriptHandler::placeProfile"
        ],
        "test-requirements": [
            "cp ./.travis/RoboFile.php ."
        ],
        "unit-test": [
            "@test-requirements",
            "./vendor/bin/robo job:run-unit-tests"
        ],
        "kernel-test": [
            "@test-requirements",
            "./vendor/bin/robo job:run-kernel-tests"
        ],
        "functional-test": [
            "@test-requirements",
            "./vendor/bin/robo job:run-functional-tests"
        ]
    },
    "extra": {
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": ["type:drupal-library"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/Commands/{$name}": ["type:drupal-drush"]
        },
        "drupal-scaffold": {
            "initial": {
                ".editorconfig": "../.editorconfig",
                ".gitattributes": "../.gitattributes"
            }
        }
    }
}
